{
  "extends": ["react-app"],
    "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "no-extra-semi": 1,
    "no-multi-spaces": 2,
    "no-multiple-empty-lines": [1, {"max": 1, "maxEOF": 1}],
    "no-trailing-spaces": 1,

    "spaced-comment": [1, "always"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "quotes": [1, "single"],
    "eol-last": [1, "always"],
    "jsx-quotes": [1, "prefer-double"],
    "key-spacing": [2, {"afterColon": true}],
    "keyword-spacing": 1,
    "arrow-body-style": [1, "as-needed"],
    "space-infix-ops": 1,
    "object-curly-spacing": [1, "always"],

    "import/order": [1, {"newlines-between": "always"}],

    "react/prop-types": 1,
    "react/require-default-props": 1,

    "prettier/prettier": [2, {"singleQuote": true, "bracketSpacing": true}]
  }
}
